<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player X"
        android:id="@+id/player"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gridbox"
        />
    <GridLayout
        android:layout_width="300dp"
        android:columnCount="3"
        android:rowCount="3"
        android:id="@+id/gridbox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="300dp">
        <TextView
            android:textSize="80dp"
            android:id="@+id/b1"

            android:layout_width="100dp"
            android:text=""
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/box_bg"
            android:layout_height="100dp"

            />
        <TextView
            android:textSize="80dp"
            android:layout_width="100dp"
            android:id="@+id/b2"

            android:text=""
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/box_bg"
            android:layout_height="100dp"

            />
        <TextView
            android:textSize="80dp"
            android:layout_width="100dp"
            android:text=""
            android:id="@+id/b3"

            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/box_bg"
            android:layout_height="100dp"

            />
        <TextView
            android:textSize="80dp"
            android:layout_width="100dp"
            android:text=""
            android:id="@+id/b4"

            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/box_bg"
            android:layout_height="100dp"

            />
        <TextView
            android:textSize="80dp"
            android:layout_width="100dp"
            android:text=""
            android:id="@+id/b5"

            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/box_bg"
            android:layout_height="100dp"

            />
        <TextView
            android:id="@+id/b6"

            android:textSize="80dp"
            android:layout_width="100dp"
            android:text=""
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/box_bg"
            android:layout_height="100dp"

            />
        <TextView
            android:textSize="80dp"
            android:layout_width="100dp"
            android:text=""
            android:id="@+id/b7"

            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/box_bg"
            android:layout_height="100dp"

            />
        <TextView
            android:textSize="80dp"
            android:layout_width="100dp"
            android:text=""
            android:id="@+id/b8"

            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/box_bg"
            android:layout_height="100dp"

            />
        <TextView
            android:textSize="80dp"
            android:layout_width="100dp"
            android:text=""
            android:id="@+id/b9"

            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/box_bg"
            android:layout_height="100dp"

            />


    </GridLayout>
    <TextView
        android:id="@+id/test"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:id="@+id/finalText"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridbox"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:text="play Again."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/finalText" />

</androidx.constraintlayout.widget.ConstraintLayout>